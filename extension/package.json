{
  "name": "unblockt",
  "displayName": "Unblockt",
  "description": "Kotlin language support for Visual Studio Code",
  "author": {
    "name": "Dmitriy Tseyler",
    "email": "unblockt@tseiler.tech"
  },
  "private": true,
  "publisher": "tseylerd",
  "version": "0.0.4",
  "license": "SEE LICENSE IN LICENSE.md",
  "preview": true,
  "icon": "resources/extensionLogo.png",
  "repository": {
    "url": "https://github.com/tseylerd/Unblockt",
    "type": "git"
  },
  "homepage": "https://github.com/tseylerd/Unblockt/blob/main/README.md",
  "bugs": {
    "url": "https://github.com/tseylerd/Unblockt/issues"
  },
  "keywords": [
    "kotlin"
  ],
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "categories": [
    "Programming Languages",
    "Linters"
  ],
  "capabilities": {
    "virtualWorkspaces": {
      "supported": false
    },
    "untrustedWorkspaces": {
      "supported": false
    }
  },
  "devDependencies": {
    "@types/node": "^22.4.0",
    "@types/vscode": "^1.75.1",
    "@vscode/test-electron": "^2.3.9",
    "esbuild": "^0.24.0"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "main": "./out/extension.js",
  "activationEvents": [],
  "contributes": {
    "languages": [
      {
        "id": "kotlin",
        "extensions": [
          ".kt",
          ".kts"
        ],
        "aliases": [
          "Kotlin",
          "kt"
        ],
        "configuration": "./kotlin-configuration.json"
      }
    ],
    "configuration": {
      "title": "Unblockt",
      "properties": {
        "unblockt.memory": {
          "type": "integer",
          "default": 4098,
          "description": "Memory in megabytes for Unblockt Language Server. Restart required."
        }
      }
    }
  },
  "scripts": {
    "compile": "npm run check-types && node esbuild.js",
    "check-types": "tsc --noEmit",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "vscode:prepublish": "npm run package",
    "package": "npm run check-types && node esbuild.js --production"
  }
}
